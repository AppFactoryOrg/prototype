.create-user
	.modal-header
		h3.modal-title Invite User

	.modal-body
		form.row(ng-submit="submit()")
			.form-group.col-sm-12
				label Email
				input.form-control(
					type="email" 
					ng-model="email"
					autofocus
				)
	.modal-footer
		button.btn.btn-default(ng-click="$dismiss()") Cancel
		button.btn.btn-success(ng-click="submit()") 
			label Invite 
			i.fa.fa-chevron-right