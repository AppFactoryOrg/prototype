.applications(ng-controller="ApplicationsCtrl")
	h1 Applications

	button.btn.btn-sm.btn-success(ng-click="create()")
		i.fa.fa-plus
		label Add application

	hr/

	.application-summary(ng-repeat="application in applications")
		.panel.panel-success
			.panel-heading
				span
					i.fa.fa-gear
					span(ng-bind="application.name")

				.btn-group.pull-right
					button.btn.btn-xs.btn-default(ng-click="edit(application)")
						i.fa.fa-folder-open-o
						label Open
					button.btn.btn-xs.btn-default(ng-click="delete(application)")
						i.fa.fa-trash

			.panel-body
				pre(ng-bind="application | json")
