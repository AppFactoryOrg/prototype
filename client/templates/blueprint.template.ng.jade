.blueprint(ng-controller="BlueprintCtrl")
	.panel.panel-primary
		.panel-heading
			span
				i.fa.fa-flask
				.name(ng-bind="blueprint.name")

			.pull-right
				.version(ng-bind="'v' + blueprint.version")

		.panel-body
			.nav.nav-tabs
				li.active 
					a(href="#") Documents
					
			.col-sm-4
				.list-group
					a.list-group-item(
							ng-repeat="documentSchema in documentSchemas" 
							ng-click="selectDocumentSchema(documentSchema)" 
							ng-class="{'active': documentIsSelected(documentSchema)}"
						)
						.name(ng-bind="documentSchema.name")

				button.btn.btn-sm.btn-success.create(ng-click="createDocumentSchema()")
					i.fa.fa-plus
					label Add Document


			.col-sm-8
				af-document-schema(
					ng-if="selectedDocumentSchema"
					document-schema="selectedDocumentSchema"
					on-deleted="deselectDocumentSchema()"
				)
