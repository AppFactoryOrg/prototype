.blueprint(ng-controller="BlueprintCtrl" ng-show="blueprintLoaded")
	
	.panel.panel-default.blueprint-header
		.panel-heading
			i.fa.fa-gear
			span.name(ng-bind="blueprint.name")
			span.version(ng-bind="'v' + blueprint.version")
		
			button.btn.btn-xs.btn-success.pull-right(ng-click="openApplication()")
				i.fa.fa-globe
				label Open

	.nav.nav-tabs(ng-if="showNav()")
		li(ui-sref-active="active")
			a(ui-sref="factory.blueprint.documents") 
				i.fa.fa-file-text-o
				span Documents
		li(ui-sref-active="active")
			a(ui-sref="factory.blueprint.screens") 
				i.fa.fa-th-large
				span Screens
		li(ui-sref-active="active")
			a(ui-sref="factory.blueprint.routines") 
				i.fa.fa-dot-circle-o
				span Routines
		li(ui-sref-active="active")
			a(ui-sref="factory.blueprint.users") 
				i.fa.fa-user
				span Users

	div(ui-view="")