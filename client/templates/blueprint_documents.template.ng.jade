.blueprint-documents(ng-controller="BlueprintDocumentsCtrl")

	.alert.alert-tip
		i.fa.fa-info-circle
		span Applications contain Documents. A Document describes a record of information in the Application.
		br/
		i.fa.fa-info-circle
		span Documents contain Attributes, which describe the information that Document can store. 

	.row
		.col-sm-4
			.list-group
				a.list-group-item(
						ng-repeat="documentSchema in documentSchemas" 
						ng-click="selectDocumentSchema(documentSchema)" 
						ng-class="{'active': documentIsSelected(documentSchema)}"
					)
					i.fa.fa-file-text-o
					span.name(ng-bind="documentSchema.name")

			button.btn.btn-sm.btn-success.create(ng-click="createDocumentSchema()")
				i.fa.fa-plus
				label Add Document

		.col-sm-8
			af-document-schema(
				ng-if="selectedDocumentSchema"
				document-schema="selectedDocumentSchema"
				on-deleted="deselectDocumentSchema()"
			)
