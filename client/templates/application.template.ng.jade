.application(ng-controller="ApplicationCtrl")
	.panel.panel-success
		.panel-heading
			span
				i.fa.fa-gear
				.name(ng-bind="application.name")

		.panel-body
			tabset
				tab(
					ng-repeat="documentSchema in documentSchemas" 
					select="selectDocumentSchema(documentSchema)"
				)
					tab-heading {{documentSchema.name}}

					table.table.table-hover.table-striped.table-condensed
						thead
							tr
								th(ng-repeat="attribute in attributes") {{attribute.name}}
						tbody
							tr(ng-repeat="document in documents")
								td(ng-repeat="attribute in attributes") {{getDocumentAttribute(document, attribute)}}

			//- 		h5 Document Schema
			//- 		pre {{documentSchema| json}}
					
			//- 		h5 Attributes
			//- 		pre {{attributes| json}}

			//- 		h5 Documents
			//- 		pre {{documents| json}}

			//- h5 Application
			//- pre {{application | json}}