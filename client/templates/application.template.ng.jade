.application(ng-controller="ApplicationCtrl")
	.panel.panel-success
		.panel-heading
			span
				i.fa.fa-gear
				.name(ng-bind="application.name")

		.panel-body
			tabset
				tab(
					ng-repeat="documentSchema in documentSchemas" 
					select="selectDocumentSchema(documentSchema)"
				)
					tab-heading {{documentSchema.name}}

					table.table.table-hover.table-striped.table-condensed
						thead
							tr
								th(ng-repeat="attribute in attributes") {{attribute.name}}
								th(width="75")

						tbody
							tr(ng-repeat="document in documents")
								td(ng-repeat="attribute in attributes") {{formatDocumentData(document, attribute)}}
								td
									.btn-group.pull-right
										button.btn.btn-xs.btn-primary(ng-click="editDocument(document)")
											i.fa.fa-pencil
										button.btn.btn-xs.btn-default(ng-click="deleteDocument(document)")
											i.fa.fa-trash

							tr(ng-hide="documents.length")
								td(colspan="99")
									.text-muted No Data Yet

					button.add-document.btn.btn-success(ng-click="addDocument()")
						i.fa.fa-plus
						span Add {{documentSchema.name}}

			//- 		h5 Document Schema
			//- 		pre {{documentSchema| json}}
					
			//- 		h5 Attributes
			//- 		pre {{attributes| json}}

			//- 		h5 Documents
			//- 		pre {{documents| json}}

			//- h5 Application
			//- pre {{application | json}}